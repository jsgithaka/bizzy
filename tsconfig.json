{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@structuralComponents": ["./src/exports/components/structural.ts"],
            "@structuralStyles": ["./src/exports/components/structural.ts"],
            "@layoutComponents": ["./src/exports/components/layout.ts"],
            "@layoutStyles": ["./src/exports/styles/layout.ts"],
            "@sharedComponents": ["./src/exports/components/shared.ts"],
            "@sharedStyles": ["./src/exports/styles/shared.ts"],
            "@widgetsComponents": ["./src/exports/components/widgets.ts"],
            "@variableFonts": ["./src/exports/fonts/variable.ts"],
            "@staticFonts": ["./src/exports/fonts/static.ts"],
            "@/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
